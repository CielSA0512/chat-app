<div class="right-wrapper">
  <div class="main-header">
    <div class="chat-title"><%= @room.name %></div>
    <div class="chat-end"><%= link_to "チャットを終了する", "#", class: "chat-end-link btn" %></div>
  </div>
  <div class="main-body">

    <div class="message">
      <div class="message-list">
        <div class="message-name">Tom</div>
        <div class="message-date">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="message-content">おはよう</div>
    </div>

    <div class="message">
      <div class="message-list">
        <div class="message-name">Sin</div>
        <div class="message-date">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="message-content">おはようー！</div>
    </div>

  </div>
  
  <%= form_with model: [@room, @message], class: "form", local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :content, placeholder: "type a message", class:"message-box"%>
      <label class="form-image">
        <span class="image-file">画像<span>
        <%= f.file_field :image, class:"hidden"%>
      </label>
    </div>
      <%= f.submit "送信", class: "form-send-btn" %>
  <% end %>
</div>